@model CityPopulationSite.Demo.Models.CityDataModel

@{
    ViewData["Title"] = "Detail";
}

<h2>Detail for @Model.City</h2>

<h4>CityData</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <div class="form-group">
            <span class="text-danger">@ViewData["error"]</span>
            <span class="text-danger">@ViewData["Message"]</span>
        </div>

        <form asp-action="Detail" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="City" class="control-label"></label>
                <span class="control-label">@Model.City</span>
                @Html.HiddenFor(m => m.City)
                @Html.HiddenFor(m => m.Loc)
                @Html.HiddenFor(m => m.State)
                <span asp-validation-for="City" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-md-3">
                    <label asp-for="Pop" class="control-label"></label>
                    <input asp-for="Pop" class="form-control" />
                    <span asp-validation-for="Pop" class="text-danger"></span>
                </div>
            </div>
          
            <div class="form-group">
                <label asp-for="State" class="control-label"></label>
                <span class="control-label">@Model.State</span>
                <span asp-validation-for="State" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Zip</label>
                <span class="control-label">@Model.Id</span>
        <span asp-validation-for="Id" class="text-danger"></span>
        </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
                <a asp-action="Index" class="btn btn-primary" >Back to List</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
